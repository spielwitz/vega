mkdir build

cd ../bin
java version.VersionCreator ../jars/build ../Web
cd ../jars

vegaRelease=$(<build/release.txt)

cd build
rm *.jar
cd ../../bin

jar cvfm ../jars/build/Vega.jar ../jars/MANIFEST_vega.MF AGPL_License.txt ApacheLicense-2.0.txt DefaultIconLicense.txt vega common commonUi commonServer uiBaseControls ic_menu.png cancel.png connected.png credentialsLocked.png disconnected.png games.png gamesNew.png mail.png mailNew.png VegaHelp_de-DE.pdf VegaHelp_en-US.pdf JetBrainsMono-Regular.ttf tutorial VegaResources_de_DE.properties VegaResources_en_US.properties

jar cvfm ../jars/build/VegaDisplay.jar ../jars/MANIFEST_display.MF AGPL_License.txt ApacheLicense-2.0.txt vegaDisplay common commonUi uiBaseControls ic_menu.png VegaHelp_de-DE.pdf VegaHelp_en-US.pdf JetBrainsMono-Regular.ttf VegaResources_de_DE.properties VegaResources_en_US.properties

jar cvfm ../jars/build/VegaServer.jar ../jars/MANIFEST_server.MF AGPL_License.txt ApacheLicense-2.0.txt vegaServer common commonServer VegaResources_de_DE.properties VegaResources_en_US.properties

cd ..
cp *.jar jars/build
rm -rf Release/*

cd jars/build
zip -r ../../Release/Vega_Build_$vegaRelease.zip *.jar
