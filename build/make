mkdir jars

cd ../bin
java version.VersionCreator ../build/jars ../Web
cd ../build

vegaRelease=$(<jars/release.txt)

cd jars
rm *.jar
rm *.pdf
cd ../../bin

jar cvfm ../build/jars/Vega.jar ../build/MANIFEST_vega.MF AGPL_License.txt ApacheLicense-2.0.txt DefaultIconLicense.txt vega common commonUi commonServer uiBaseControls ic_menu.png cancel.png connected.png credentialsLocked.png disconnected.png games.png gamesNew.png mail.png mailNew.png JetBrainsMono-Regular.ttf tutorial VegaResources_de_DE.properties VegaResources_en_US.properties

jar cvfm ../build/jars/VegaDisplay.jar ../build/MANIFEST_display.MF AGPL_License.txt ApacheLicense-2.0.txt vegaDisplay common commonUi uiBaseControls ic_menu.png JetBrainsMono-Regular.ttf VegaResources_de_DE.properties VegaResources_en_US.properties

jar cvfm ../build/jars/VegaServer.jar ../build/MANIFEST_server.MF AGPL_License.txt ApacheLicense-2.0.txt vegaServer common commonServer VegaResources_de_DE.properties VegaResources_en_US.properties

cd ..
cp *.jar build/jars
cp VegaHelp*.pdf build/jars
cp LICENSE build/jars
cp src/*.txt build/jars
rm -rf Release/*

cd build/jars
zip -r ../../Release/Vega_Build_$vegaRelease.zip *.jar VegaHelp*.pdf LICENSE *License*.txt
